<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LearnActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Từ cần học ngày hôm nay"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="New List"
            android:paddingStart="200dp"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <ListView
        android:paddingTop="20dp"
        android:id="@+id/lvhienthi"
        android:layout_width="match_parent"
        android:layout_height="239dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Các bài tập ngày hôm nay"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Push up 10"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/pushup" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Situp 10"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/situp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Glute bridge 10"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/glutebridge" />
    
</LinearLayout>